        "cross-fetch": "3.1.5",
        "dotenv": "15.0.0",
        "glob-promise": "4.2.2",
        "locate-app": "2.0.0",
        "markdown-to-txt": "2.0.1",
        "spacetrim": "0.9.0",
        "ts-node": "10.4.0",
        "type-fest": "2.14.0",
        "waitasecond": "1.9.0"
    },
    "devDependencies": {
        "@types/jest": "^29.2.5",
        "jest": "^29.3.1",
        "prettier": "^2.8.1",
        "ts-jest": "^29.0.3",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.9.4"
    }
